        "type": "git",
        "url": "git+https://github.com/windycom/windy-plugin-template.git"
    },
    "dependencies": {
        "@windycom/plugin-devtools":"^3.0.3",
        "less": "4.2.0",
        "ts-import": "^5.0.0-beta.0",
        "rollup-plugin-watch-globs": "2.0.1",
        "geodesy": "2.4.0",
        "custom-windy-picker":"^1.0.17"
    }
}