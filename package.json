{
    "name": "windy-plugin-template",
    "version": "3.0.0",
    "description": "Template for developing Windy Plugins",
    "main": "dist/plugin.min.js",
    "type": "module",
    "scripts": {
        "build": "rm -rf dist && mkdir dist && SERVE=false rollup -c && cp package.json dist/",
